          box-shadow: 0 0 0 2px rgba(67, 97, 238, 0.2);
        }
    
        button {
          padding: 10px 15px;
          background: var(--primary-color);
          color: white;
          border: none;
          border-radius: 4px;
          cursor: pointer;
          font-size: 16px;
          transition: all 0.3s;
        }
    
        button:hover {
          background: var(--secondary-color);
          box-shadow: var(--shadow-md);
        }
    
        .remove-btn {
