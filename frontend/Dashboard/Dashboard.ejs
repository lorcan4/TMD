        }
    
        .section-header a {
          color: var(--primary-color);
          text-decoration: none;
          transition: all 0.3s;
        }
    
        .section-header a:hover {
          color: var(--secondary-color);
        }
    
        /* Responsive adjustments */
        @media (max-width: 768px) {
          .form-grid {
            grid-template-columns: 1fr;
          }
    
          .visitor-time,
          .visitor-earnings {
            text-align: left;
