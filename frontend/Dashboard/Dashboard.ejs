                            <div class="form-grid">
                              <div class="form-group">
                                <label>Name</label>
                                <input type="text" name="name" placeholder="Enter name" required>
                              </div>
                              <div class="form-group">
                                <label>Client Subscription (MAD)</label>
                                <input type="number" name="totalPrice" step="0.01" placeholder="Total amount" required>
                              </div>
                              <div class="form-group">
                                <label>Gym Profit (MAD)</label>
                                <input type="number" name="coachPrice" step="0.01" placeholder="Coach's share" required>
                              </div>
                            </div>
                            <button type="submit">Calculate & Save</button>
                          </form>
                          <% if (typeof message !== 'undefined') { %>
                            <div class="message"><%= message %></div>
                          <% } %>
                        </div>
                  
                        <ul id="visitorList">
                          <% let totalEarnings = 0; %>
                          <% MemberAll.forEach(Member => { %>  
                            <li>
                              <div class="visitor-info">
                                <div class="visitor-avatar"><%= Member.name.charAt(0).toUpperCase() %></div>
                                <div class="visitor-details">
                                  <div class="visitor-name"><%= Member.name %></div>
                                  <small>Total: $<%= Member.totalPrice.toFixed(2) %> | Coach: $<%= Member.coachPrice.toFixed(2) %></small>
                                </div>
                              </div>
                              <div class="visitor-time">
                                <%= Member.visitTime.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>
                              </div>
                              <div class="visitor-earnings"><%= Member.earnings.toFixed(2) %> MAD</div>-
                              <form action="/remove-visitor/<%= Member._id %>" method="POST">
                                <button type="submit" class="remove-btn">Remove</button>
                              </form>
                            </li>
                            <% totalEarnings += Member.earnings; %>
                          <% }); %>
                        </ul>
                  
                        <div class="total-earnings">
                          <h4>Total Earnings: <%= totalEarnings.toFixed(2) %> MAD</h4>
                        </div>
                      </div>
                    </div>
 



            </div>
        </div>
    </div>

    <script>
        // Toggle sidebar on mobile
        const menuToggle = document.getElementById('menuToggle');
        const closeSidebar = document.getElementById('closeSidebar');
        const sidebar = document.getElementById('sidebar');

        menuToggle.addEventListener('click', () => {
            sidebar.classList.add('active');
        });

        closeSidebar.addEventListener('click', () => {
            sidebar.classList.remove('active');
        });

        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', (e) => {
            if (window.innerWidth <= 768) {
                if (!sidebar.contains(e.target) && e.target.id !== 'menuToggle') {
                    sidebar.classList.remove('active');
                }
            }
        });

        // Handle window resize
        window.addEventListener('resize', () => {
            if (window.innerWidth > 768) {
                sidebar.classList.remove('active');
            }
        });
    </script>
