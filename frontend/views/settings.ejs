    <!-- Dashboard Tab -->
    <div class="tab-content" id="dashboard-tab">
      <div class="dashboard-party">
        <img src="../images/home/photo_2025-04-30_10-43-52.jpg" alt="PowerFit Logo">
        <div class="party-info">
          <h3>PowerFit Gym System</h3>
          <p>Version 2.5.1</p>
          <p>Â© 2025 lorcan solan.</p>
          <p>
            <i class="fas fa-globe"></i>
